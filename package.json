{
  "name": "api",
  "version": "1.0.0",
  "description": "Sazka API",
  "main": "src/UI/HTTP/index.js",
  "repository": "git@gitlab.com:sazka/api.git",
  "author": "Jorge Arco <jorge.arcoma@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node -r tsconfig-paths/register src/UI/HTTP/index.js",
    "rebuild": "yarn build; ELASTIC_MAPPING=true yarn start",
    "dev": "yarn dev:deps:start && sleep 2; yarn nodemon",
    "nodemon": "DEV_TOOLS=true nodemon --verbose",
    "dev:deps:start": "docker-compose -f etc/docker/dev/docker-compose.yaml up -d",
    "dev:deps:stop": "docker-compose -f etc/docker/dev/docker-compose.yaml stop",
    "build": "tsc",
    "boot-es": "ELASTIC_MAPPING=true ELASTIC_RECREATE=true node -r tsconfig-paths/register src/UI/CLI/bootElastic.js",
    "test": "yarn build; yarn recreate-db;SILENT_LOGS=true SILENT_ES_LOGS=true yarn boot-es; yarn mocha",
    "mocha": "SILENT_LOGS=true SILENT_ES_LOGS=true NODE_ENV=test ./node_modules/.bin/nyc --reporter=html mocha -r ts-node/register -r tsconfig-paths/register tests/**/*.test.ts",
    "typeorm": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm",
    "recreate-db": "yarn typeorm schema:drop && yarn typeorm migration:run",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "cli": "SILENT_ES_LOGS=true node -r tsconfig-paths/register "
  },
  "dependencies": {
    "@types/uuid": "^3.4.3",
    "apollo-server-express": "^2.14.2",
    "body-parser": "^1.18.3",
    "elasticsearch": "^15.1.1",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.5",
    "hollywood-js": "^1.4.3",
    "inversify": "^4.13.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.12",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.4.2",
    "typeorm": "^0.2.25",
    "uuid": "^3.3.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/elasticsearch": "^5.0.25",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.0",
    "@types/mocha": "^5.2.5",
    "@types/sequelize": "^4.27.24",
    "@types/supertest": "^2.0.5",
    "chai": "^4.1.2",
    "elastic-apm-node": "^1.12.0",
    "graphql-voyager": "^1.0.0-rc.25",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0",
    "typescript": "^3.0.3"
  }
}
